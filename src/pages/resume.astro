---
import DocsLayout from "../layouts/DocsLayout.astro";
import SidebarNav from "../components/SidebarNav.astro";
import TocSidebar from "../components/TocSidebar.astro";

const title = "Resume";
const description = "Professional experience and skills.";
---

<DocsLayout {title} {description}>
  <SidebarNav slot="sidebar" />
  <TocSidebar slot="toc" html="" />

  <header class="mb-10 border-b border-zinc-200 pb-8">
    <h1 class="text-4xl font-semibold tracking-tight lg:text-5xl">Resume</h1>
    <p class="mt-3 max-w-[60ch] text-lg text-zinc-600">
      Product Designer & Front-end Engineer with 5+ years building digital products.
    </p>
    <div class="mt-6 flex gap-3">
      <a
        class="rounded border border-black bg-black px-4 py-2 text-sm font-medium text-white no-underline hover:bg-zinc-900 transition-colors"
        href="#"
      >
        Download PDF ↓
      </a>
    </div>
  </header>

  <div class="space-y-12">
    <section>
      <h2 class="text-xl font-semibold mb-4">Experience</h2>
      <div class="space-y-8">
        <div class="border-l-2 border-zinc-200 pl-6">
          <h3 class="font-semibold">Senior Product Designer</h3>
          <p class="text-sm text-zinc-600">TechCorp • 2023 – Present</p>
          <ul class="list-none space-y-1 text-sm text-zinc-700 mt-2">
            <li>— Led design system evolution serving 3M+ users</li>
            <li>— Shipped 5 major features with 98% adoption rate</li>
            <li>— Mentored 3 junior designers on design thinking methodology</li>
          </ul>
        </div>

        <div class="border-l-2 border-zinc-200 pl-6">
          <h3 class="font-semibold">Product Designer & Developer</h3>
          <p class="text-sm text-zinc-600">StartupXYZ • 2021 – 2023</p>
          <ul class="list-none space-y-1 text-sm text-zinc-700 mt-2">
            <li>— Built and maintained React component library</li>
            <li>— Designed dashboard used by 50k+ professionals</li>
            <li>— Reduced page load time by 65% through optimization</li>
          </ul>
        </div>

        <div class="border-l-2 border-zinc-200 pl-6">
          <h3 class="font-semibold">Front-end Developer</h3>
          <p class="text-sm text-zinc-600">Agency Co. • 2019 – 2021</p>
          <ul class="list-none space-y-1 text-sm text-zinc-700 mt-2">
            <li>— Developed 15+ client websites with focus on performance</li>
            <li>— Implemented animations and interactions using Three.js</li>
            <li>— Achieved 95+ Lighthouse scores across all projects</li>
          </ul>
        </div>
      </div>
    </section>

    <section>
      <h2 class="text-xl font-semibold mb-4">Skills</h2>
      <div class="grid grid-cols-2 gap-6">
        <div>
          <h3 class="font-mono text-xs uppercase tracking-wider text-zinc-400 mb-3">Design</h3>
          <ul class="list-none space-y-1 text-sm text-zinc-700">
            <li>User Research & Interviews</li>
            <li>Wireframing & Prototyping</li>
            <li>Design Systems</li>
            <li>Interaction Design</li>
            <li>Figma & Design Tools</li>
          </ul>
        </div>
        <div>
          <h3 class="font-mono text-xs uppercase tracking-wider text-zinc-400 mb-3">Development</h3>
          <ul class="list-none space-y-1 text-sm text-zinc-700">
            <li>React & TypeScript</li>
            <li>Astro & Next.js</li>
            <li>Three.js & WebGL</li>
            <li>CSS & Tailwind</li>
            <li>Performance Optimization</li>
          </ul>
        </div>
      </div>
    </section>

    <section>
      <h2 class="text-xl font-semibold mb-4">Education</h2>
      <div class="border-l-2 border-zinc-200 pl-6">
        <h3 class="font-semibold">Bachelor of Science in Computer Science</h3>
        <p class="text-sm text-zinc-600">University Name • 2019</p>
      </div>
    </section>
  </div>
</DocsLayout>
